<Application x:Class="DevManager.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DevManager.App.Resources.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark"
                                             PrimaryColor="Blue"
                                             SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ProcessStateToColorConverter x:Key="StateToColorConverter"/>
            <converters:ProcessStateToTextConverter x:Key="StateToTextConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:LogEntryTypeToColorConverter x:Key="LogTypeToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
