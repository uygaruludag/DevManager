<Window x:Class="DevManager.App.Views.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:strings="clr-namespace:DevManager.App.Localization"
        Title="{x:Static strings:Strings.About_Title}"
        Width="460" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="32,24,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- App Icon & Name -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16">
            <materialDesign:PackIcon Kind="Console" Width="56" Height="56"
                                      HorizontalAlignment="Center"
                                      Foreground="{DynamicResource PrimaryHueMidBrush}"
                                      Margin="0,0,0,12"/>
            <TextBlock Text="{x:Static strings:Strings.About_AppName}"
                       FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="TxtVersion"
                       Text="v1.0.0"
                       FontSize="13" Opacity="0.6"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="{x:Static strings:Strings.About_Description}"
                   FontSize="13" Opacity="0.8"
                   TextAlignment="Center" TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <!-- Divider -->
        <Separator Grid.Row="2" Margin="0,0,0,16"
                   Background="{DynamicResource MaterialDesignDivider}"/>

        <!-- Company Info -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{x:Static strings:Strings.About_Company}"
                       FontSize="15" FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <materialDesign:PackIcon Kind="Email" Width="18" Height="18"
                                          VerticalAlignment="Center"
                                          Opacity="0.7" Margin="0,0,8,0"/>
                <TextBlock VerticalAlignment="Center">
                    <Hyperlink x:Name="EmailLink" Click="EmailLink_Click"
                               Foreground="{DynamicResource PrimaryHueMidBrush}">
                        info@istechlabs.com
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                <materialDesign:PackIcon Kind="Web" Width="18" Height="18"
                                          VerticalAlignment="Center"
                                          Opacity="0.7" Margin="0,0,8,0"/>
                <TextBlock VerticalAlignment="Center">
                    <Hyperlink x:Name="WebLink" Click="WebLink_Click"
                               Foreground="{DynamicResource PrimaryHueMidBrush}">
                        www.istechlabs.com
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="4" Content="{x:Static strings:Strings.About_Close}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                HorizontalAlignment="Center"
                Width="120"
                Click="Close_Click"
                Margin="0,16,0,0"/>
    </Grid>
</Window>
