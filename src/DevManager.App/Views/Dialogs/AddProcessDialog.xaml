<Window x:Class="DevManager.App.Views.Dialogs.AddProcessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Yeni Süreç Ekle"
        Width="550" Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Yeni Süreç"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Margin="0,0,0,16"/>

            <TextBox Grid.Row="1" x:Name="TxtName"
                     materialDesign:HintAssist.Hint="Süreç Adı (ör: API Backend)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtCommand"
                         materialDesign:HintAssist.Hint="Komut (ör: dotnet, cmd, npm)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <Button Grid.Column="1" Content="..." Width="40" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="BrowseCommand_Click"/>
            </Grid>

            <TextBox Grid.Row="3" x:Name="TxtArguments"
                     materialDesign:HintAssist.Hint="Argümanlar (ör: run --project Api.csproj)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <Grid Grid.Row="4" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtWorkingDir"
                         materialDesign:HintAssist.Hint="Çalışma Dizini"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <Button Grid.Column="1" Content="..." Width="40" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="BrowseWorkingDir_Click"/>
            </Grid>

            <TextBlock Grid.Row="5" Text="Ortam Değişkenleri (KEY=VALUE, her satıra bir tane)"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Margin="0,0,0,4"/>

            <TextBox Grid.Row="6" x:Name="TxtEnvVars"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True" Height="80"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,12"/>

            <Separator Grid.Row="7" Margin="0,4,0,12"/>

            <StackPanel Grid.Row="8" Margin="0,0,0,12">
                <CheckBox x:Name="ChkAutoRestart" Content="Crash durumunda otomatik yeniden başlat"
                          IsChecked="True" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="24,0,0,4">
                    <TextBlock Text="Max deneme:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TxtMaxRetries" Text="3" Width="50"/>
                    <TextBlock Text="Bekleme (sn):" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <TextBox x:Name="TxtRestartDelay" Text="5" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="24,4,0,0">
                    <TextBlock Text="Başlatma gecikmesi (sn):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TxtStartupDelay" Text="0" Width="50"/>
                </StackPanel>
            </StackPanel>

            <CheckBox Grid.Row="9" x:Name="ChkAutoStartWithProject"
                      Content="Proje başlatıldığında otomatik başlat"
                      IsChecked="True" Margin="0,0,0,16"/>

            <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="İptal" Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="Ekle" Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="Add_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
