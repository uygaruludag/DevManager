<Window x:Class="DevManager.App.Views.Dialogs.AddProcessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:strings="clr-namespace:DevManager.App.Localization"
        Title="{x:Static strings:Strings.Dialog_AddProcess_Title}"
        Width="550" Height="660"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{x:Static strings:Strings.Dialog_AddProcess_Header}"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Margin="0,0,0,16"/>

            <TextBox Grid.Row="1" x:Name="TxtName"
                     materialDesign:HintAssist.Hint="{x:Static strings:Strings.Dialog_AddProcess_NameHint}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtCommand"
                         materialDesign:HintAssist.Hint="{x:Static strings:Strings.Dialog_AddProcess_CommandHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <Button Grid.Column="1" Content="..." Width="40" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="BrowseCommand_Click"/>
            </Grid>

            <TextBox Grid.Row="3" x:Name="TxtArguments"
                     materialDesign:HintAssist.Hint="{x:Static strings:Strings.Dialog_AddProcess_ArgsHint}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,12"/>

            <Grid Grid.Row="4" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtWorkingDir"
                         materialDesign:HintAssist.Hint="{x:Static strings:Strings.Dialog_AddProcess_WorkDirHint}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <Button Grid.Column="1" Content="..." Width="40" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="BrowseWorkingDir_Click"/>
            </Grid>

            <TextBlock Grid.Row="5" Text="{x:Static strings:Strings.Dialog_AddProcess_EnvVars}"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Margin="0,0,0,4"/>

            <TextBox Grid.Row="6" x:Name="TxtEnvVars"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     AcceptsReturn="True" Height="80"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,12"/>

            <Separator Grid.Row="7" Margin="0,4,0,12"/>

            <StackPanel Grid.Row="8" Margin="0,0,0,12">
                <CheckBox x:Name="ChkAutoRestart" Content="{x:Static strings:Strings.Dialog_AddProcess_AutoRestart}"
                          IsChecked="True" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="24,0,0,4">
                    <TextBlock Text="{x:Static strings:Strings.Dialog_AddProcess_MaxRetries}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TxtMaxRetries" Text="3" Width="50"/>
                    <TextBlock Text="{x:Static strings:Strings.Dialog_AddProcess_Delay}" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <TextBox x:Name="TxtRestartDelay" Text="5" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="24,4,0,0">
                    <TextBlock Text="{x:Static strings:Strings.Dialog_AddProcess_StartupDelay}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TxtStartupDelay" Text="0" Width="50"/>
                </StackPanel>
            </StackPanel>

            <CheckBox Grid.Row="9" x:Name="ChkAutoStartWithProject"
                      Content="{x:Static strings:Strings.Dialog_AddProcess_AutoStartWithProject}"
                      IsChecked="True" Margin="0,0,0,12"/>

            <!-- Notification Mode -->
            <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="{x:Static strings:Strings.Dialog_AddProcess_NotificationMode}"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                <ComboBox x:Name="CmbNotificationMode" SelectedIndex="1" Width="180">
                    <ComboBoxItem Content="{x:Static strings:Strings.NotificationMode_Off}" Tag="Off"/>
                    <ComboBoxItem Content="{x:Static strings:Strings.NotificationMode_ErrorOnly}" Tag="ErrorOnly"/>
                    <ComboBoxItem Content="{x:Static strings:Strings.NotificationMode_ErrorAndWarning}" Tag="ErrorAndWarning"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{x:Static strings:Strings.Dialog_AddProcess_Cancel}" Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="{x:Static strings:Strings.Dialog_AddProcess_Add}" Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="Add_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
